<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ContextMenu x:Key="ContextMenu">
            <MenuItem Header="新建文件夹" Click="menuItem_Click"/>
            <MenuItem Header="新建文件" Click="menuItem_Click"/>
            <MenuItem Header="删除" Click="menuItem_Click"/>
            <MenuItem Header="重命名" Click="menuItem_Click"/>
        </ContextMenu>
    </Window.Resources>
    <Grid Name="MyGrid" HorizontalAlignment="Left" Margin="0,0,-0.4,0" Width="794"  ContextMenu="{StaticResource ContextMenu}">
        <TextBox Name="AddressBar" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="520"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="551,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <Button Content="Search" Margin="699,10,20,0" VerticalAlignment="Top" Height="23"/>
    </Grid>
</Window>
